@import jp.yappo.pologen.EntryPageModel

@param model:EntryPageModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <title>${model.title} - ${model.site.title}</title>
    <link rel="icon" href="${model.site.faviconUrl}"/>
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="${model.site.feedXmlUrl}"/>
</head>
<body>
<header>
    <h1>
        <a href="${model.site.blogTopUrl}">${model.site.title}</a>
    </h1>
</header>
<article class="section">
    <div class="eyecatch">
    </div>
    <div class="container">
        <h1>${model.title}</h1>
        <div>
            <img src="${model.site.author.iconUrl}"
                 alt="${model.site.author.name}"
                 width="16"
                 height="16"/>
            ‚úç : ${model.publishDateLocal}
        </div>
        <div>
            $unsafe{model.bodyHtml}
        </div>
    </div>
</article>
<footer>
    <p>
        <small>
            <a href="${model.site.author.url}">${model.site.author.name}</a>
        </small>
    </p>
</footer>
</body>
</html>
